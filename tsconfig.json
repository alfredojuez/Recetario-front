{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    // Configuracion de rutas del proyecto
    "paths":{
      "@public/*": ["src/app/@public/*"],
      "@public-core/*": ["src/app/@public/core/*"],

      "@admin/*": ["src/app/@admin/*"],
      "@admin-core/*": ["src/app/@admin/core/*"],
    },
    // fin rutas
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
